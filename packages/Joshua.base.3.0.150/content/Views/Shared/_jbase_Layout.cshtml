<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>@J.Settings["joshua:titleprefix"] - @ViewBag.Title</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="@J.Settings["joshua:sitedescription"]">
  <meta name="author" content="@J.Settings["joshua:author"]">
  <meta name="keywords" content="@J.Settings["joshua:metakey"]">
  <link href="~/Content/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
    }
  </style>
  <link href="~/Content/bootstrap-responsive.min.css" rel="stylesheet">
  <link href="~/Content/bootstrap.parts.css" rel="stylesheet" />
  @Styles.Render("~/Content/css")

  <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>

<body>
  @Html.Partial("_partial_navbar")
  <div class="container">
    @RenderBody()
  </div>


  @Html.Part_Modal("logindialog",
                   content: Html.Partial("~/Views/Account/LoginDialog.cshtml"))

  <!-- Placed at the end of the document so the pages load faster -->
  @Scripts.Render("~/bundles/jquery")
  <script src="~/Scripts/bootstrap.min.js"></script>
  @RenderSection("scripts", required: false)
  @Html.Partial("~/views/_components/part_GoogleAnalytics.cshtml")
</body>
</html>
