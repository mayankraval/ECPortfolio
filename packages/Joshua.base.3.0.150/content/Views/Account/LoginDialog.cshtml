<form class="form-signin" action="/Account/Login?returnurl=@ViewBag.returnUrl" method="post" style="color:black;">
  <h2 class="form-signin-heading">Please sign in</h2>
  <input type="text" class="input-block-level" placeholder="Username " name="UserName">
  <input type="password" class="input-block-level" placeholder="Password" name="Password">
  <label class="checkbox">
    <input type="checkbox" value="remember-me">Remember me
  </label>
  <button class="btn btn-large btn-primary pull-right" type="submit">Sign in</button>
  <div style="clear: both"></div>
  <div>
    <p></p>
    <p>does not have an account ? <a href="/Account/register">create it</a></p>
  </div>
</form>

