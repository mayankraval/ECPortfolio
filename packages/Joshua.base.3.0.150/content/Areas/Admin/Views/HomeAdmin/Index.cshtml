@{
  ViewBag.Title = "Administration Home";
  Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}

<div class="container ">
  <div class="row">
    <form class="form-search pull-right" method="get" action="/Admin/Content/Index">
      <div class="input-append">
        <input type="text" name="search" class="input-xxlarge search-query ">
        <button type="submit" class="btn">Search</button>
      </div>
    </form>
  </div>
  <p class="lead">
    Notifications
  </p>

  <div class="row widget-dark">
    @foreach (var w in J.Dashboard.GetNotificationWidgets())
    {
      @w(Html)
    }
  </div>
  <hr />
  <p class="lead">
    Shortcuts
  </p>
  <div class="row">
    @foreach (var s in J.Dashboard.GetShortcuts())
    {
      var shortcut = s(Html);
      <a class="quick-button-small span1" href="@shortcut.Link">
        <i class="@shortcut.IconClass"></i>
        <p>@shortcut.Description</p>
        @if (shortcut.Value != null && !string.IsNullOrEmpty((shortcut.Value ?? string.Empty).ToString()))
        {
          <span class="notification @shortcut.ColorClass">@MvcHtmlString.Create((shortcut.Value ?? string.Empty).ToString())</span>
        }
      </a>
    }
  </div>
</div>


@section scripts
{
  <script src="~/Areas/Admin/Scripts/jquery.knob.js"></script>
}