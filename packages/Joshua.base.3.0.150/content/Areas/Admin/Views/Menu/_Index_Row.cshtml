@model Joshua.Models.Menu
@{
  if (ViewBag.isPartial != null && ViewBag.isPartial)
  {
    Layout = null;
  }
}
<li id="item_@Model._Id">
  <a href="#">@Model.Name - @Model.Description
    <div style="float: right; margin-top: -5px;">
      <button class="btn" onclick="javascript:newMenu('@Model._Id')">
        <i class="icon-plus"></i><i class="icon-arrow-down"></i>
      </button>
      <div class="btn-group">
        <button class="btn btn-warning" onclick="javascript:navigate('/Admin/Menu/Edit/@(Model._Id)')"><i class="icon-pencil "></i></button>
        <button class="btn btn-danger" onclick="javascript:deleteItem('@Model._Id')"><i class="icon-trash icon-white"></i></button>
      </div>
    </div>
  </a>
  <ul id="item_@(Model.Name)_Sub" class="nav nav-tabs nav-stacked" style="margin-left: 20px; margin-top: 5px; margin-bottom:0px;">
    @Html.Action("SubMenu", "Menu", new { area = "Admin", id = Model._Id })
  </ul>
</li>


