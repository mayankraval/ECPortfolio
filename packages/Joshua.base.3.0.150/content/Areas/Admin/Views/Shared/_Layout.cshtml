<!DOCTYPE html>
<html lang="@UICulture">
<head>
  <meta charset="utf-8">
  <title>@ViewBag.Title</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="">
  <meta name="author" content="">

  <!-- Le styles -->
  <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet"/>
  <link href="@Url.Content("~/Content/bootstrap-responsive.css")" rel="stylesheet"/>
  <link href="@Url.Content("~/Areas/Admin/Content/admin.css")" rel="stylesheet" />
  <link href="@Url.Content("~/Areas/Admin/Content/font/fontawesome.css")" rel="stylesheet" />
  <link href="~/Areas/Admin/Content/admin_dash.css" rel="stylesheet" />
  <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
  <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
  <!-- Fav and touch icons -->
  <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
  @Scripts.Render("~/bundles/jquery")
</head>
<body>
  @Html.Partial("~/Areas/Admin/Views/Shared/_NavigationBar.cshtml")
  <div class="container-fluid">
    @Html.Part_Alert()

    <div class="row-fluid" style="margin-top: 50px;">
      @RenderSection("left_column", false)
      @RenderBody()
      @RenderSection("right_column", false)
    </div>
  </div>

  @Html.Part_Modal("logindialog",
                   content: Html.Action("Login", "Account", new { partial = true, area = "" }))

  @Scripts.Render("~/bundles/jqueryui", "~/bundles/jqueryval")
  <script src="@Url.Content("~/Scripts/bootstrap.js")" type="text/javascript"></script>
  <script src="@Url.Content("~/Areas/Admin/Scripts/PartialRender.js")" type="text/javascript"></script>
  @RenderSection("scripts", required: false)

  @if (!Joshua.LicenseManager.HasLicense)
  { 
    
    <div class="container">
      <div class="row">
        <hr />
        <div class="text-error">Warning: You does not have a valid license of JoshuaCMS</div>
        <div class="text-error">An alert will be displayed in production environment.</div>
        <div class="text-success">Plase contact : <a href="mailto:joshuacms@teamdev.it">joshuacms@teamdev.it</a> to obtain a valid license. </div>
      </div>
    </div>
  }
</body>
</html>
