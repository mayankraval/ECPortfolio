@model Joshua.Models.Container
<form id="new_container_form" class="form-horizontal" action="/Admin/Containers/Save" method="post">
  <style>
    .editarea {
      margin-bottom: 10px;
    }
  </style>
  @Html.HiddenFor(model => model.ParentId, new { id = "new_container_ParentId" })
  <div class="editarea">
    @Html.LabelFor(model => model.Name)
    <div>
      @Html.TextBoxFor(model => model.Name)
      @Html.ValidationMessageFor(model => model.Name)
    </div>
  </div>

  <div class="editarea">
    @Html.LabelFor(model => model.Description)

    <div>
      @Html.TextBoxFor(model => model.Description, new { style = "width: 80%;" })
    </div>
  </div>
  <div class="btn-group controls pull-right" style="margin: 10px;">
    <button class="btn btn-primary" onclick="javascript:Save()"><i class="icon-ok icon-white"></i>Save</button>
    <button class="btn" data-dismiss="modal" aria-hidden="true"><i class="icon-trash "></i>Cancel</button>
  </div>
</form>


<script type="text/javascript">
  function CreateNewContainer(parentid) {
    $("#new_container_ParentId").val(parentid);
  }

  function Save()
  {
    $("#new_container_form").submit();
  }
</script>
