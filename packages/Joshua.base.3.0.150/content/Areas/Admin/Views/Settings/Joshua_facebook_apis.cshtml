<h3>Facebook Settings</h3>

<div class="control-group">
  <label class="control-label" >Facebook AppID</label>
  <div class="controls">
    <input type="hidden" name="setting-key" value="facebook:appid" />
    <input type="text" name="setting-value" placeholder="facebook app id" style="width: 80%;" value="@J.Settings["facebook:appid"]"/>
  </div>
</div>

<div class="control-group">
  <label class="control-label" >Facebook PageId</label>
  <div class="controls">
    <input type="hidden" name="setting-key" value="facebook:pageid" />
    <input type="text" name="setting-value" placeholder="facebook page id" style="width: 80%;" value="@J.Settings["facebook:pageid"]" />
  </div>
</div>


