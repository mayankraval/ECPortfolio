<!-- Site name -->
<div class="control-group">
  <label class="control-label">Site name</label>
  <div class="controls">
    <input type="hidden" name="setting-key" value="joshua:sitename" />
    <input type="text" name="setting-value" placeholder="sitename" value="@J.Settings["joshua:sitename"]" />
  </div>
</div>

<!-- Site name -->
<div class="control-group">
  <label class="control-label">Title Prefix</label>
  <div class="controls">
    <input type="hidden" name="setting-key" value="joshua:titleprefix" />
    <input type="text" name="setting-value" placeholder="title prefix" value="@J.Settings["joshua:titleprefix"]"/>
  </div>
</div>

<!-- Site name -->
<div class="control-group">
  <label class="control-label">Main Domain</label>
  <div class="controls">
    <input type="hidden" name="setting-key" value="joshua:sitedomain" />
    <input type="text" name="setting-value" placeholder="main domain name" style="width: 80%;" value="@J.Settings["joshua:sitedomain"]" />
  </div>
</div>

<!-- Site description -->
<div class="control-group">
  <label class="control-label">Site description</label>
  <div class="controls">
    <input type="hidden" name="setting-key" value="joshua:sitedescription" />
    <textarea rows="3" name="setting-value" placeholder="description" style="width: 80%;">@J.Settings["joshua:sitedescription"]</textarea>
  </div>
</div>


<!-- Site metakey -->
<div class="control-group">
  <label class="control-label">Site metakeys</label>
  <div class="controls">
    <input type="hidden" name="setting-key" value="joshua:metakey" />
    <textarea rows="3" name="setting-value" placeholder="metakeys" style="width: 80%;">@J.Settings["joshua:metakey"]</textarea>
  </div>
</div>


<div class="control-group">
  <label class="control-label">Site Author</label>
  <div class="controls">
    <input type="hidden" name="setting-key" value="joshua:author" />
    <input type="text" name="setting-value" placeholder="author" style="width: 80%;" value="@J.Settings["joshua:author"]"/>
  </div>
</div>

<hr />

<div class="control-group">
  <label class="control-label"></label>
  <div class="controls">
    <input type="hidden" name="setting-key" value="joshua:autoresizeimages" />
    <input type="hidden" id="autoresizeimages-check" name="setting-value" value="@J.Settings["joshua:autoresizeimages"]" />
    <label class="checkbox">
      <input type="checkbox" for="autoresizeimages-check" @(J.Settings["joshua:autoresizeimages"] == "true" ? "checked" : "") />
      Auto resize images to Content size
    </label>
  </div>
</div>

<div class="control-group">
  <label class="control-label"></label>
  <div class="controls">
    <input type="hidden" name="setting-key" value="joshua:autocropimages" />
    <input type="hidden" id="autocropimages-check" name="setting-value" value="@J.Settings["joshua:autocropimages"]" />
    <label class="checkbox">
      <input type="checkbox" for="autocropimages-check" @(J.Settings["joshua:autocropimages"] == "true" ? "checked" : "") />
      Auto crop images to Content size (works only with Auto resize checked)
    </label>
  </div>
</div>

<hr />

<div class="control-group">
  <label class="control-label"></label>
  <div class="controls">
    <input type="hidden" name="setting-key" value="joshua:useazure" />
    <input type="hidden" id="useazure-check" name="setting-value" value="@J.Settings["joshua:useazure"]" />
    <label class="checkbox">
      <input type="checkbox" for="useazure-check" @(J.Settings["joshua:useazure"] == "true" ? "checked" : "") />
      Use Azure Store to save uploaded files
    </label>
  </div>
</div>

<div class="control-group">
  <label class="control-label">Azure Store Account</label>
  <div class="controls">
    <input type="hidden" name="setting-key" value="joshua:azurestoreaccount" />
    <input type="text" name="setting-value" placeholder="azure storage key" style="width: 80%;" value="@J.Settings["joshua:azurestoreaccount"]"/>
  </div>
</div>

<div class="control-group">
  <label class="control-label">Upload file folder</label>
  <div class="controls">
    <input type="hidden" name="setting-key" value="joshua:uploadfilefolder" />
    <input type="text" name="setting-value" placeholder="upload folder" style="width: 80%;" value="@J.Settings["joshua:uploadfilefolder"]"/>
  </div>
</div>

