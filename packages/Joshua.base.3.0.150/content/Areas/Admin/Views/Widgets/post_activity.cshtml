@{
  var postcount = J.Data.Contents().Count();
  var unapproved = J.Data.Contents().Get(p => p.Published == false && p.Language == UICulture).Count();
}
<div class="span3" style="text-align: center">
  <div class="circleStatsItem red">
    <i class="fa-icon-edit"></i>
    <input type="text" value="@unapproved" class="unpublishedposts" />
  </div>
  <div class="box-small-title">Unpublished Posts</div>
</div>

<script type="text/javascript">
  $(function () {
    $(".unpublishedposts").knob({
      'min': 0,
      'max': @(postcount + unapproved),
      'readOnly': true,
      'width': 120,
      'height': 120,
      'fgColor': '#FA5833',
      //'dynamicDraw': true,
      //'thickness': 0.2,
      //'tickColorizeValues': true,
      //'skin': 'tron'
    })
  });
</script>
